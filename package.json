{
  "name": "claude-skills",
  "version": "1.0.0",
  "description": "CLI for installing, managing and discovering Claude Code Agent Skills",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-skills": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "claude",
    "claude-code",
    "skills",
    "agent",
    "ai",
    "llm"
  ],
  "author": "Carlos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jarero321/claude-skills.git"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "chalk": "^5.6.2",
    "figlet": "^1.10.0",
    "gradient-string": "^3.0.0",
    "yaml": "^2.4.0"
  }
}
